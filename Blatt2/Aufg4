#include<stdio.h>
#include<stdlib.h>
void array_add(int u[], int v[], int result[], int size){
    int i = 0;
    for(i = 0; i < size; i++){
        result[i] = u[i] + v[i];
    }
}

int digit_sum(char v[], int size){
    int i = 0;
    int r = 0;
    for(i = 0; i < size; i++){
        if(isdigit(v[i])){
            r += v[i];
        }
    }
}

void manipulator(char v[], int size){
    int i = 0;
    for(i = 0; i < size; i++){
        if(isuppercase(v[i]) && toint(v[i]) % 2 == 0){
            v[i] = tolowercase(v[i]);
        }
    }
}
